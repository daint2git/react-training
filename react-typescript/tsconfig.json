{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "typings/*"]
    },
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true
    // "checkJs": true
  },
  // "include": ["src/**/*.{ts,tsx}"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "build"]
}
